                <img src="/imgs/home-icon.svg" alt="">
                <a href="/home">Página Inicial</a>
            </div>
            <div class="option">
                <img src="/imgs/create-icon.svg" alt="">
                <a href="/create">Criar um correio</a>
            </div>
        </div>
        <hr class="divMenu">
        <div class="categories">
            <div class="option">
                <img src="/imgs/categorize-icon.svg" alt="">
                <h5>Categorias</h5>
            </div>
            <div class="category">
                <img src="/imgs/art-icon.svg" alt="">
                <a href="/home/category/Arte">Arte</a>
            </div>
            <div class="category">
                <img src="/imgs/cinema-icon.svg" alt="">
                <a href="/home/category/Cinema e Tv">Cinema e TV</a>
            </div>
            <div class="category">
                <img src="/imgs/science-icon.svg" alt="">
                <a href="/home/category/Ciências">Ciências</a>
            </div>
            <div class="category">
                <img src="/imgs/pop-icon.svg" alt="">
                <a href="/home/category/Cultura POP">Cultura POP</a>
            </div>
            <div class="category">
                <img src="/imgs/sport-icon.svg" alt="">
                <a href="/home/category/Esportes">Esportes</a>
            </div>
            <div class="category">
                <img src="/imgs/humor-icon.svg" alt="">
                <a href="/home/category/Humor">Humor</a>
            </div>
            <div class="category">
                <img src="/imgs/politics-icon.svg" alt="">
                <a href="/home/category/Política">Política</a>
            </div>
            <div class="category">
                <img src="/imgs/business-icon.svg" alt="">
                <a href="/home/category/Negócios">Negócios</a>
            </div>
        </div>
        <hr class="divMenu">
        <div class="logout">
            <div class="option">
                <img src="/imgs/logout-icon.svg" alt="">
                <a href="/logout">Sair</a>
            </div>
        </div>
    </section>
    <section class="creating">
        <h4>Criar um Correio</h4>
        <div class="container">
            <form action="/upload" method="POST" enctype="multipart/form-data">
              
                <div class="entryarea">
                    <input type="text" name="title" id="title" required>
                    <label for="">Título do correio</label>
                </div>

                <div class="entryarea">
                    <input type="text" name="category" id="category" list="cat-opt" required>
                    <datalist id="cat-opt">
                        <option value="Arte"></option>
                        <option value="Cinema e TV"></option>
                        <option value="Ciências"></option>
                        <option value="Cultura POP"></option>
                        <option value="Esportes"></option>
                        <option value="Humor"></option>
                        <option value="Política"></option>
                        <option value="Negócios"></option>
                    </datalist>
                    <label for="">Categoria</label>
                </div>

                <div class="entryarea">
                    <input type="text" name="post" id="post" required>
                    <label for="">Correio</label>
                </div>

                <div class="filearea">
                    <input type="file" name="image" id="image">
                </div>
            
                <button type="submit">Enviar</button>
            </form>
        </div>
    </section>
</main>